{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Nuxt",
            "runtimeExecutable": "/usr/local/bin/pnpm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "env": {
                "DEBUG": "*"
            },
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "autoAttachChildProcesses": true
        }
    ]
}
